package decorator;

/**
 * 饮料的抽象类
 * 
 * Component组件
 * 
 * @author Rock.Lee
 *
 */
public abstract class Beverage {

	String description = "Unknown Beverage";

	/**
	 * 子类实现
	 * @return
	 */
	public abstract double cost();

	public String getDescription() {
		return description;
	}

	public void setDescription(String description) {
		this.description = description;
	}

}
