package exm.interrupt;

import org.junit.Test;

public class Interrupt {
	
	@Test
	public void interrupt() throws InterruptedException{
		Thread t = new Thread(){
			@Override
			public void run() {
				while(true){
					System.out.println(System.currentTimeMillis());
					Thread.yield();
				}
			}
		};
		t.start();
		Thread.sleep(2000);
		t.interrupt();
	}
	
}
